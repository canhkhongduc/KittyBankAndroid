<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="80dp">

    <android.support.constraint.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/rank_txt_rank"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:text="#1"
            android:textSize="24sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/rank_img_pet"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginStart="10dp"
            android:src="@drawable/dragon4"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/rank_txt_rank"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/rank_txt_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginTop="5dp"
            android:text="Username"
            android:textSize="20sp"
            app:layout_constraintStart_toEndOf="@id/rank_img_pet"
            app:layout_constraintTop_toTopOf="@id/rank_img_pet" />

        <TextView
            android:id="@+id/rank_txt_pet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:text="Petname"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="@id/rank_img_pet"
            app:layout_constraintStart_toStartOf="@id/rank_txt_user" />

        <TextView
            android:id="@+id/rank_txt_level"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="50dp"
            android:text="Level 1"
            android:textSize="20sp"
            app:layout_constraintStart_toEndOf="@id/rank_txt_user"
            app:layout_constraintTop_toTopOf="@id/rank_txt_user" />

        <TextView
            android:id="@+id/rank_txt_exp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Exp: 500"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="@id/rank_txt_pet"
            app:layout_constraintStart_toStartOf="@id/rank_txt_level" />
    </android.support.constraint.ConstraintLayout>

</android.support.constraint.ConstraintLayout>
