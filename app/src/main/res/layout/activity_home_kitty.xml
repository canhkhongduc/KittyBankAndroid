<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="gamification.kitty.hackathon.kittybank.kitty.HomeKittyActivity">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/listPets"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="39dp">

    </android.support.v7.widget.RecyclerView>
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="2"
        android:layout_below="@+id/listPets">
        <android.support.v7.widget.CardView
            android:layout_marginRight="6dp"
            android:layout_marginBottom="6dp">
            <LinearLayout
                android:layout_width="190dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    app:cardBackgroundColor="@android:color/holo_blue_light">

                    <ImageView
                        android:layout_width="75dp"
                        android:layout_height="75dp"
                        android:layout_gravity="center"
                        android:src="@drawable/cart" />
                </android.support.v7.widget.CardView>
                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:background="#FFF"/>
                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    app:cardBackgroundColor="@android:color/holo_blue_light">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Cửa hàng"
                        android:textAlignment="center"
                        android:textColor="@color/accent" />
                </android.support.v7.widget.CardView>
            </LinearLayout>
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView>
            <LinearLayout
                android:layout_width="190dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    app:cardBackgroundColor="@android:color/holo_blue_dark">

                    <ImageView
                        android:layout_width="75dp"
                        android:layout_height="75dp"
                        android:layout_gravity="center"
                        android:src="@drawable/hybrid" />
                </android.support.v7.widget.CardView>
                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:background="#FFF"/>
                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    app:cardBackgroundColor="@android:color/holo_blue_dark">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Lai tạo"
                        android:textAlignment="center"
                        android:textColor="@color/accent" />
                </android.support.v7.widget.CardView>

            </LinearLayout>
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView>
            <LinearLayout
                android:layout_width="190dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    app:cardBackgroundColor="@android:color/holo_blue_dark">

                    <ImageView
                        android:layout_width="75dp"
                        android:layout_height="75dp"
                        android:layout_gravity="center"
                        android:src="@drawable/quest" />
                </android.support.v7.widget.CardView>
                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:background="#FFF"/>

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    app:cardBackgroundColor="@android:color/holo_blue_dark">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Nhiệm vụ"
                        android:textAlignment="center"
                        android:textColor="@color/accent" />
                </android.support.v7.widget.CardView>

            </LinearLayout>
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView>
            <LinearLayout
                android:layout_width="190dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    app:cardBackgroundColor="@android:color/holo_blue_light">

                    <ImageView
                        android:layout_width="75dp"
                        android:layout_height="75dp"
                        android:layout_gravity="center"
                        android:src="@drawable/rank" />
                </android.support.v7.widget.CardView>
                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:background="#FFF"/>

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    app:cardBackgroundColor="@android:color/holo_blue_light">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Xếp hạng"
                        android:textAlignment="center"
                        android:textColor="@color/black" />
                </android.support.v7.widget.CardView>
            </LinearLayout>
        </android.support.v7.widget.CardView>
    </GridLayout>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="120dp"
        android:layout_height="30dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="32dp"
        android:layout_marginTop="12dp"
        android:background="#FF0000"
        android:text="CP: 1200"
        android:textAlignment="center"
        android:textColor="@color/accent"
        android:textSize="20sp" />

</RelativeLayout>
