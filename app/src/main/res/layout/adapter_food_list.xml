<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginRight="30dp">

    <ImageView
        android:id="@+id/food_adapter_img"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/food_adapter_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/food_adapter_img"
        app:layout_constraintTop_toTopOf="@id/food_adapter_img"
        app:layout_constraintBottom_toBottomOf="@+id/food_adapter_img"/>

</android.support.constraint.ConstraintLayout>
